 }
/* news start */
.news {
  width: 696rpx;
  height: 64rpx;
  line-height:64rpx;
  margin: 20rpx auto;
  color: #989898;
  font-size: 24rpx;
  background:rgba(238,238,238,1);
  border-radius:32rpx;
  text-align: center;
}
/* news end */

/* order-detail start */
.order-detail {
  position: relative;
  box-sizing: border-box;
  width: 697rpx;
  margin:16rpx auto 34rpx;
  padding: 32rpx 40rpx;
  background:linear-gradient(-72deg,rgba(247,217,23,1),rgba(254,197,0,1));
  box-shadow:0px 4rpx 38rpx 0 rgba(60,60,58,0.1);
  border-radius:20rpx;
}
.message{
  display: flex;
  align-items: center;
}
.order-tips {
  color: #0B0B0B;
  font-size: 24rpx;
}
.icon-city {
  width: 23rpx;
  height: 37rpx;
}
.price {
  margin: 44rpx 0 22rpx;
  font-size: 60rpx;
  font-weight: bold;
}
.renew {
  padding: 0;
  position: absolute;
  bottom: 28rpx;
  right: 40rpx;
  display: inline-block;
  width: 164rpx;
  height: 60rpx;
  border:1px solid rgba(11,11,11,1);
  border-radius:30rpx;
  line-height: 58rpx;
  background: transparent;
}
.renew::after {
  border: none;
}
/* order-detail end */

/* recover start */
.headline {
  position: relative;
  padding-left: 30rpx;
  letter-spacing: 2rpx;
}
.headline::after {
  position: absolute;
  top: 50%;
  left: 0;
  content: '';
  width: 12rpx;
  height: 12rpx;
  margin-top: -6rpx;
  border-radius: 50%;
  background: #FFE401;
}
.recover-main {
  margin-top: 35rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 4px 38px 0px rgba(60,60,58,0.1);
  border-radius:20rpx;
  overflow: hidden;
}
.recover-tab {
  box-sizing: border-box;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1rpx solid #eee;
}
.icon-agree {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}
.tab {
  height: 88rpx;
  box-sizing: border-box;
  /* padding: 0 40rpx; */
  color: #989898;
  text-align: center;
}
.tab-0 {
  width: 271rpx;
}
.tab-1 {
  width: 240rpx;
}
.tab-actived {
  color: #0b0b0b;
  background: #FFE401;
}
.store-address{
  padding:  34rpx 0;
  margin: 0 36rpx;
  border-bottom: 1rpx solid #eee;
}
.store-address:last-child {
  border-bottom: none;
}
.icon-tel {
  width: 26rpx;
  height: 42rpx;
}
.icon-warning {
  width: 33rpx;
  height: 33rpx;
  margin-right: 21rpx;
  vertical-align: middle;
}
.icon-arrow {
  width: 23rpx;
  height: 30rpx;
}
.icon-remind {
  width: 33rpx;
  height: 33rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
/* recover end */

