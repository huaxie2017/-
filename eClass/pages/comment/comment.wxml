<view class="comment">
  <view class="commentInfo">
    <view class="shopInfo">
      <view class="common_title">交易信息</view>
      <view class="flex center shopMessage">
        <image src='../../images/phone.png' class="phone"></image>
        <view class="message_p flex_item1">
          <view class="phoneName">iPhone 7</view>
          <view class="source">购买渠道：香港行货</view>
        </view>
      </view>
      <view class="price flex center">
        <text class="flex_item1 name">回收价</text>
        <text class="flex_item1 money">￥188</text>
      </view>
    </view>
    <view class="writeBox">
      <textarea placeholder="请输入您的评价" placeholder-class="placeholder" bindinput="inputContent" class='textBox'/>
    </view>
    <view class="save" bindtap='save'>提交</view>
  </view>
</view>