/* wrap-container start */
/* 遮罩蒙层 */
.wrapper-container {
   position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 2;
}
@keyframes slideUp {
  0% {
    transform: translateY(100%);
  } 
  100% {
    transform: translateY(0);
  }
}
/* 遮罩主体部分 */
.wrapper-main-container {
   box-sizing: border-box;
   position: absolute;
   bottom: 0;
   left: 0;
   width: 100%;
   height: auto;
   z-index: 9;
   background: #ffffff;
   overflow: auto;
  animation: slideUp linear 0.3s;
}
/* 遮罩边缘 */
.mask {
  width: 100%;
  height: 100%;
  z-index: 6;
}
/* wrap-container end */