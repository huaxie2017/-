/* components/AddressItem/AddressItem.wxss */

.edit-container {
  width: 100%;
  overflow: hidden;
}
.tips {
  color: #FF8C1D;
  margin: 40rpx 0 260rpx 30rpx;
}
.pick-main {
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  overflow: hidden;
}
.pick-img {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.pickview {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  z-index: 2;
}
.define {
  height: 80rpx;
  padding: 0 40rpx;
  /* margin-bottom: 50rpx; */
  line-height: 80rpx;
  background: #fff;
  font-size: 36rpx;
  border-bottom: 1rpx solid #ccc;
  text-align: center;
}
picker-view-column {
  text-align: center;
}
.cancel {
  float: left;
}
.ok {
  float: right;
}
.lab {
  display: inline-block;
  height: 150rpx;
}
.test {
  margin-top: -12rpx;
}
.region-label {
  display: inline-block;
  margin: 0 14rpx;
  color: #666;
  font-size: 28rpx;
}
.region-title {
  box-sizing: border-box;
  width: 100%;
  height: 84rpx;
  padding-right: 20rpx;
}
.region-item {
  line-height: 80rpx;
  padding-left: 20rpx;
  color: #666;
  font-size: 30rpx;
}
.wrapper-main-container {
  height: 60%;
  overflow: hidden;
}
.regions-main {
  box-sizing: border-box;
  width: 100%;
  height: 90%;
  padding-bottom: 34rpx;
}
.bt-3 {
  padding: 20rpx 10rpx;
}
.col-yellow {
  color: #ecc28b;
}
.regions-main {
  border-top: 1rpx solid #eee;
}
.bt-yellow {
  border-bottom: 3rpx solid #ecc28b;
}
.ok {
  float: right;
  padding: 20rpx 0;
}
.region-main {
  height: 618rpx;
}